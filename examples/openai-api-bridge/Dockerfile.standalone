# Standalone Dockerfile for OpenAI API Bridge
# Build from the example directory: docker build -f Dockerfile.standalone -t api-bridge .

FROM maven:3.9-eclipse-temurin-17 AS builder

WORKDIR /app

# Copy and build the application
COPY pom.xml .
COPY src src

# Note: This expects the SDK jar to be available in local Maven repository
# Run 'mvn install' in the root project first
RUN mvn clean package -DskipTests || \
    (echo "Failed to build. Make sure to run 'mvn install' in the root project first" && exit 1)

# Runtime stage
FROM eclipse-temurin:17-jre-alpine

WORKDIR /app

# Copy the jar file
COPY --from=builder /app/target/*.jar app.jar

# Create non-root user
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser && \
    chown -R appuser:appuser /app

USER appuser

# Environment variables
ENV JAVA_OPTS="-Xmx512m -Xms256m" \
    OPENCODE_URL="http://localhost:8765" \
    OPENCODE_AUTO_START="false" \
    API_SECURITY_ENABLED="false" \
    CORS_ALLOWED_ORIGINS="*" \
    SERVER_PORT="8081"

EXPOSE 8081

HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8081/v1/health || exit 1

ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar app.jar"]