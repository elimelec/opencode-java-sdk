# OpenCode All-in-One Configuration
# Copy this file to .env and customize as needed

# Server Configuration
SERVER_PORT=8081

# OpenCode Server Settings
OPENCODE_URL=http://localhost:8765
OPENCODE_API_KEY=
OPENCODE_TIMEOUT=120000

# OpenCode Auto-Start (if you want to launch OpenCode binary automatically)
OPENCODE_AUTO_START=false
OPENCODE_BINARY_PATH=opencode

# API Security
API_SECURITY_ENABLED=false
API_KEYS=

# CORS Configuration
CORS_ALLOWED_ORIGINS=*

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_DEV_SST_OPENCODE=DEBUG
